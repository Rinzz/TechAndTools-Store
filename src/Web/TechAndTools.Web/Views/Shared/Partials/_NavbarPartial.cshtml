@using TechAndTools.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<TechAndToolsUser> SignInManager
@inject UserManager<TechAndToolsUser> UserManager
<!-- HEADER -->
<header>
    <!-- top Header -->
    <div id="top-header">
        <div class="container">
            <div class="pull-left">
                <span>Welcome to Tech&amp;Tools Online Store!</span>
            </div>
            <div class="pull-right">
                <ul class="header-top-links">
                    <li><a href="/">Store</a></li>
                    <li><a asp-area="Blog" asp-controller="Home" asp-action="Index">Blog</a></li>
                    <li><a href="#">Contacts</a></li>
                    <li><a href="#">About Us</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /top Header -->
    <!-- header -->
    <div id="header">
        <div class="container">
            <div class="pull-left">
                <!-- Logo -->
                <div class="header-logo">
                    <a class="logo" href="/">
                        <img src="~/img/logo.png" alt="">
                    </a>
                </div>
                <!-- /Logo -->
            </div>
            <div class="pull-right">
                <ul class="header-btns">
                    <!-- Account -->
                    <li class="header-account dropdown default-dropdown">
                        <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                            <div class="header-btns-icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <strong class="text-uppercase">My Account <i class="fa fa-caret-down"></i></strong>
                        </div>
                        <partial name="Partials/_LoginPartial"/>
                        <ul class="custom-menu">
                            @if (this.SignInManager.IsSignedIn(this.User))
                            {
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa fa-user"></i> My Account</a></li>
                                <li><a href="#"><i class="fa fa-heart"></i> My Favorites</a></li>
                                <li><a href="#"><i class="fa fa-exchange"></i> Compare</a></li>
                                <li><a href="#"><i class="fa fa-check"></i> Checkout</a></li>

                                <li><a asp-area="Identity" asp-page="/Account/Logout"><i class="fa fa-unlock-alt"></i> Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-unlock-alt"></i> Login</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-user-plus"></i> Create An Account</a></li>
                            }
                        </ul>
                    </li>
                    <!-- /Account -->
                    <!-- Cart -->
                    @await Component.InvokeAsync("ShoppingCart")
                    <!-- /Cart -->
                    <!-- Mobile nav toggle-->
                    <li class="nav-toggle">
                        <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
                    </li>
                    <!-- / Mobile nav toggle -->
                </ul>
            </div>
        </div>
        <!-- header -->
    </div>
    <!-- container -->
</header>