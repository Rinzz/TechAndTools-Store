@using TechAndTools.Web.ViewModels.Administration.MainCategories
@model TechAndTools.Web.InputModels.Administration.Categories.CategoryInputModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>CategoryInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="MainCategory" class="text-primary h5">Product Type</label>
                </div>
                <select class="form-control text-primary" id="type" asp-for="MainCategory">
                    <option selected disabled>--- Select Product Type ---</option>
                    @foreach (var type in (IEnumerable<AddCategoryMainCategoryViewModel>)this.ViewData["mainCategories"])
                    {
                        <option value="@type.Name">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="MainCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
