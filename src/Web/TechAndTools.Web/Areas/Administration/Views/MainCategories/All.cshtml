@model IEnumerable<TechAndTools.Web.ViewModels.MainCategories.MainCategoryViewModel>

@{
    ViewData["Title"] = "MainAll";
}

<h2>All Main Categories</h2>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table display">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
