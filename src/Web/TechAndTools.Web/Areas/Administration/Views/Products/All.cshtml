@model IEnumerable<TechAndTools.Web.ViewModels.Administration.Products.ProductAllViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All</h2>

<p>
    <a asp-action="Create" class="btn primary-btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Picture
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <img src="@item.Images.Last()?.ImageUrl" width="60" height="60">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { item.Id })
                    |
                    @Html.ActionLink("Delete", "Delete", new { item.Id })

                </td>
            </tr>
        }
    </tbody>
</table>

