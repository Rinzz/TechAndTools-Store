@model ContactAllViewModel

<div class="mobile-fondsize-20 h3 text-center text-muted font-italic"><u>Зaпитвания</u></div>
<div class="shadow pr-4 pl-4 pb-4 mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="container mobile-fondsize-11 p-3">
                <div id="verm" class="vertical-menu">
                    @foreach (var contact in Model.ContactViewModels)
                    {
                        string color = "text-muted";
                        if (contact.MarkAsRead == false)
                        {
                            color = "text-dark font-weight-bold";
                        }

                        string active = null;
                        if (contact.Id == Model.ContactViewModel.Id)
                        {
                            active = "active";
                        }
                        <a asp-controller="Contacts" asp-action="All" asp-route-id="@contact.Id" class="@active">
                            <div id="@contact.Id" class="row @color">
                                <div class="col-md-4 col">
                                    @contact.FullName
                                </div>
                                <div class="col-md-8 col">
                                    @contact.Message
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="container mt-3">
                <form>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="@Model.ContactViewModel.FullName">Заглавие:</label>
                                <input asp-for="@Model.ContactViewModel.FullName" class="form-control" disabled placeholder="Заглавие" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="@Model.ContactViewModel.Email">Емейл:</label>
                                <input type="email" asp-for="@Model.ContactViewModel.Email" class="form-control" disabled placeholder="Емейл" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <label asp-for="@Model.ContactViewModel.Message">Съдържание:</label>
                        <textarea asp-for="@Model.ContactViewModel.Message" class="form-control" rows="3" disabled>@Model.ContactViewModel.Message</textarea>
                    </div>
                    <div class="row mb-3 pt-0">
                        <div class="col-md-6">
                            <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@Model.ContactViewModel.Id" class=""> <i class="far fa-trash-alt"> Изтрий</i></a>
                        </div>
                        <div class="col-md-6 text-right">
                            <a asp-controller="Contacts" asp-action="Seen" asp-route-id="@Model.ContactViewModel.Id" class=""><i class="far fa-envelope"> Маркирай като непрочетено</i></a>
                        </div>
                    </div>
                    <div class="text-right">
                        <a href="mailto:@Model.ContactViewModel.Email?subject=Re: @Model.ContactViewModel.FullName&body=%0D%0A%0D%0ARe: @Model.ContactViewModel.Message" class="btn xeon-color text-white btn-sm font-weight-bold"><i class="fas fa-reply"></i> Отговори</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>